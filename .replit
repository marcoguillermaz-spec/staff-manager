modules = ["nodejs-20", "web"]
run = "PORT=5000 HOSTNAME=0.0.0.0 node .next/standalone/server.js"
hidden = [".config", ".git", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "npm install && npm run build && cp -r .next/static .next/standalone/.next/static && cp -r public .next/standalone/public"]
run = ["sh", "-c", "PORT=5000 HOSTNAME=0.0.0.0 node .next/standalone/server.js"]
